{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "preserveSymlinks": true,
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
